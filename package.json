{
	"name": "armandphilippot-com",
	"version": "1.0.10",
	"description": "A WordPress theme for my personal website.",
	"author": "Armand Philippot",
	"license": "GPL-2.0-or-later",
	"homepage": "https://github.com/ArmandPhilippot/armandphilippot.com#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ArmandPhilippot/armandphilippot.com.git"
	},
	"bugs": {
		"url": "https://github.com/ArmandPhilippot/armandphilippot.com/issues"
	},
	"keywords": [
		"WordPress",
		"theme"
	],
	"main": "gulpfile.js",
	"scripts": {
		"init": "gulp initTheme",
		"build": "gulp",
		"watch": "gulp watch",
		"release": "standard-version -a",
		"translate": "gulp translate",
		"zip": "gulp zipTheme",
		"prepare": "husky install",
		"lint": "npm-run-all --parallel lint:*",
		"lint:scss": "stylelint \"**/*.scss\" --syntax scss",
		"lint:js": "eslint --ext .js,.jsx",
		"lint:php": "composer lint"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@babel/preset-env": "^7.12.7",
		"@commitlint/cli": "^12.1.1",
		"@commitlint/config-conventional": "^12.1.1",
		"@wordpress/browserslist-config": "^3.0.3",
		"@wordpress/eslint-plugin": "^9.0.4",
		"@wordpress/stylelint-config": "^19.0.3",
		"autoprefixer": "^10.0.4",
		"browser-sync": "^2.26.13",
		"browserslist": "^4.15.0",
		"del": "^6.0.0",
		"dotenv": "^9.0.0",
		"dotenv-expand": "^5.1.0",
		"eslint": "^7.14.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"gulp": "^4.0.2",
		"gulp-babel": "^8.0.0",
		"gulp-clean-css": "^4.3.0",
		"gulp-concat": "^2.6.1",
		"gulp-filter": "^7.0.0",
		"gulp-imagemin": "^7.1.0",
		"gulp-line-ending-corrector": "^1.0.3",
		"gulp-notify": "^4.0.0",
		"gulp-postcss": "^9.0.0",
		"gulp-rename": "^2.0.0",
		"gulp-replace": "^1.0.0",
		"gulp-rtlcss": "^1.4.1",
		"gulp-sass": "^4.1.0",
		"gulp-sort": "^2.0.0",
		"gulp-uglify": "^3.0.2",
		"gulp-wp-pot": "^2.5.0",
		"gulp-zip": "^5.0.2",
		"husky": "^6.0.0",
		"lint-staged": "^10.5.4",
		"npm-run-all": "^4.1.5",
		"plugin-error": "^1.0.1",
		"postcss": "^8.1.10",
		"postcss-sorting": "^6.0.0",
		"prettier": "npm:wp-prettier@^2.2.1-beta-1",
		"standard-version": "^9.0.0",
		"stylelint": "^13.8.0",
		"stylelint-config-prettier": "^8.0.2"
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	],
	"standard-version": {
		"scripts": {
			"postbump": "gulp bump && gulp recompileCSS && git add -A"
		}
	},
	"dependencies": {
		"normalize.css": "^8.0.1"
	},
	"lint-staged": {
		"src/js/**/*.js": [
			"eslint --cache --fix",
			"prettier --write"
		],
		"src/scss/**/*.scss": [
			"stylelint --fix --syntax=scss",
			"prettier --write"
		],
		"*.md": "prettier --write"
	}
}
